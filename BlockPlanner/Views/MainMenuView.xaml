<TextBlock
            Grid.Row="0"
            Grid.Column="0"
            FontSize="32" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Text="BlockPlanner">
        </TextBlock>

        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            FontSize="24" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom"
            Text="Available Plans"
            Margin="0 0 0 10">
        </TextBlock>

        <Button
            Grid.Row="1"
            Grid.Column="0"
            FontSize="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Height="50"
            Width="200"
            Content="Add new plan"
            Background="YellowGreen">
        </Button>

        <Viewbox
            Grid.Row="2"
            Grid.Column="0"
            Margin="10 0 10 0">
            <Calendar 
                Language="en-US"
                FirstDayOfWeek="Monday"/>
        </Viewbox>



        <ListView
            Grid.Row="1"
            Grid.Column="1"
            Grid.RowSpan="2"
            Margin="10 25 10 20"
            FontSize="15"
            FontWeight="Bold"
            HorizontalAlignment="Stretch"
            SelectionMode="Single"
            
            >

            <ListViewItem></ListViewItem>
            <ListViewItem></ListViewItem>
            <ListViewItem></ListViewItem>
            <!-- <ListViewItem></ListViewItem> -->
            <!-- <ListViewItem></ListViewItem> -->
            <!-- <ListViewItem></ListViewItem> -->
            <!-- <ListViewItem></ListViewItem> -->
            <!-- <ListViewItem></ListViewItem> -->
